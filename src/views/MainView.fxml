<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="501.0" prefWidth="642.0" spacing="2.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainController">
   <HBox prefHeight="54.0" prefWidth="642.0">
      <children>
          <Label fx:id="welcomeLabel" styleClass="header-label" text="Welcome to SmartGrocery!">
            <HBox.margin>
               <Insets left="10.0" right="20.0" />
            </HBox.margin>
         </Label>
         <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" text="Log Out">
            <HBox.margin>
               <Insets left="300.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>
   <HBox prefHeight="0.0" prefWidth="642.0" VBox.vgrow="ALWAYS">
      <children>
         <TextField fx:id="nameField" prefHeight="25.0" prefWidth="187.0" promptText="Item name" styleClass="text-field">
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin>
         </TextField>
         <TextField fx:id="quantityField" prefHeight="25.0" prefWidth="175.0" promptText="Item Quantity" styleClass="text-field">
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin>
         </TextField>
         <DatePicker fx:id="expiryPicker" prefHeight="25.0" prefWidth="241.0" />
      </children>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" />
      </padding>
   </HBox>
   <TableView fx:id="tableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="227.0" prefWidth="535.0" styleClass="centered-table" VBox.vgrow="ALWAYS">
     <columns>
         <TableColumn fx:id="usernameColumn" prefWidth="108.66668951511383" text="Username" />
       <TableColumn fx:id="nameColumn" prefWidth="122.6666488647461" styleClass="table-header" text="Name" />
       <TableColumn fx:id="quantityColumn" prefWidth="75.0" styleClass="table-header" text="Quantity" />
         <TableColumn fx:id="expiryColumn" prefWidth="156.0" styleClass="table-header" text="Expiry Date" />
         <TableColumn fx:id="daysLeftColumn" prefWidth="75.0" styleClass="table-header" text="Days Left" />
         <TableColumn fx:id="statusColumn" prefWidth="156.0" styleClass="table-header" text="Status" />
     </columns>
   </TableView>
   <HBox prefHeight="69.0" prefWidth="642.0" spacing="20.0">
      <children>
         <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteItem" text="Delete Selected">
            <HBox.margin>
               <Insets left="10.0" right="20.0" top="20.0" />
            </HBox.margin>
         </Button>
          <Button fx:id="startButton" onAction="#handleAddItem" styleClass="main-button" text="Insert">
            <HBox.margin>
               <Insets right="20.0" top="20.0" />
            </HBox.margin>
         </Button>
         <Button id="editButton" fx:id="editButton" mnemonicParsing="false" onAction="#handleEditItem" text="Edit Selected">
            <HBox.margin>
               <Insets right="20.0" top="20.0" />
            </HBox.margin>
         </Button>
         <Button fx:id="manageUsersButton" mnemonicParsing="false" onAction="#openUserManagement" text="Manage Users">
            <HBox.margin>
               <Insets top="20.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>
   <padding>
      <Insets top="10.0" />
   </padding>
</VBox>
